# /.env.example

# Server Configuration
PORT=3978
NODE_ENV=development

# Bot Framework Configuration
BOT_ID=your-bot-id
BOT_PASSWORD=your-bot-password
MICROSOFT_APP_ID=your-microsoft-app-id
MICROSOFT_APP_PASSWORD=your-microsoft-app-password

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# Azure OpenAI Configuration (if using Azure)
AZURE_OPENAI_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_MODEL=your-model-deployment-name

# Microsoft Authentication (MSAL)
AAD_APP_CLIENT_ID=your-aad-client-id
AAD_APP_CLIENT_SECRET=your-aad-client-secret
AAD_APP_TENANT_ID=your-tenant-id
AAD_APP_OAUTH_AUTHORITY_HOST=https://login.microsoftonline.com

# Microsoft Graph API Scopes
GRAPH_SCOPES=User.Read,Calendars.ReadWrite,Tasks.ReadWrite

# Azure Storage (if needed)
AZURE_STORAGE_CONNECTION_STRING=your-storage-connection-string
AZURE_ACCOUNT_NAME=your-storage-account-name
AZURE_ACCOUNT_KEY=your-storage-account-key
AZURE_TABLE_NAME=your-table-name

# Application Insights (optional)
APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection-string

# State Storage Configuration
STATE_STORAGE_TYPE=memory  # or 'azure' if using Azure Storage

# Logging Configuration
LOG_LEVEL=info  # debug, info, warn, error

# Teams Configuration
TEAMS_APP_ID=your-teams-app-id
INITIALIZE_WITH_TEAMS_SSO=true

# Note: Replace all "your-*" values with actual configuration values
# Do not commit actual values to source control
# Copy this file to .env and fill in your values